{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "indent": "warn",
    "padded-blocks": "warn",
    "no-trailing-spaces": "warn",
    "eol-last": "off",
    "no-multiple-empty-lines": "warn",

    "no-unused-vars": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-template": "warn"
  },
  "globals": {
    "Phaser": true
  }
}